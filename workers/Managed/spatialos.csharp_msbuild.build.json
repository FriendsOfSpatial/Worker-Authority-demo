{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "unpack"
          ]
        },
        {
          "name": "C#",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache",
            "--output=../../generated_code/csharp",
            "--language=csharp"
          ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        },
        {
          "name": "Linux",
          "command": "msbuild",
          "arguments": [
            "/p:Configuration=ReleaseLinux",
            "/p:Platform=x64",
            "Managed.sln"
          ],
          "target": "ReleaseLinux"
        },
        {
          "name": "macOS",
          "command": "msbuild",
          "arguments": [
            "/p:Configuration=ReleaseMacOS",
            "/p:Platform=x64",
            "Managed.sln"
          ],
          "target": "ReleaseMacOS"
        },
        {
          "name": "Windows",
          "command": "msbuild",
          "arguments": [
            "/p:Configuration=ReleaseWindows",
            "/p:Platform=x64",
            "Managed.sln"
          ],
          "target": "ReleaseWindows"
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Windows",
          "command": "msbuild",
          "arguments": [
            "/t:Clean",
            "/p:Configuration=ReleaseWindows",
            "/p:Platform=x64",
            "Managed.sln"
          ],
          "target": "ReleaseWindows"
        },
        {
          "name": "Linux",
          "command": "msbuild",
          "arguments": [
            "/t:Clean",
            "/p:Configuration=ReleaseLinux",
            "/p:Platform=x64",
            "Managed.sln"
          ],
          "target": "ReleaseLinux"
        },
        {
          "name": "macOS",
          "command": "msbuild",
          "arguments": [
            "/t:Clean",
            "/p:Configuration=ReleaseMacOS",
            "/p:Platform=x64",
            "Managed.sln"
          ],
          "target": "ReleaseMacOS"
        },
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "clean"
          ]
        }
      ]
    }
  ]
}
